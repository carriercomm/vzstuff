# Nullmailer default delivery address
ADMINADDR="root@example.org"

#DNS Recursor for VE config
RECURSOR=172.16.42.1

#Smarthost for Mail delivery
SMARTHOST=smtp.example.org

#Template name used during deployment
DEPLOYTEMPLATE="debian-6.0-bootstrap"

#Debian Mirror to use
DEBMIRROR=http://ftp.at.debian.org/debian

#Packages to exclude (suitable for Debian Squeeze in this example)
EXCLUDEPACKAGE=isc-dhcp-client,isc-dhcp-common,dmidecode,nano,module-init-tools,tasksel,tasksel-data

#Packages to include
INCLUDEPACKAGE=vim,screen,file,less,lsof,strace,ltrace,telnet,mtr-tiny,dnsutils,tcpdump

#Debian architecture to use
DEBARCH=amd64

#Debian suite to use
DEBSUITE=squeeze
